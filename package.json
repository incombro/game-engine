{
  "name": "game-engine",
  "version": "0.0.1",
  "description": "Init Engine",
  "main": "index.js",
  "type": "module",
  "repository": "git@github.com:incombro/game-engine.git",
  "author": "Loty Gero <lotgyero@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clear:tsbuild": "rimraf .tsbuildinfo",
    "clear:dist": "rimraf dist",
    "clear": "yarn run clear:tsbuild && yarn run clear:dist",
    "build:types": "tsc --project ./tsconfig.types.json",
    "postbuild:types": "tsc-alias --verbose --dir dist/_types --project tsconfig.types.json",
    "build:cjs": "tsc --project ./tsconfig.cjs.json",
    "postbuild:cjs": "tsc-alias --verbose --dir dist/_cjs --project tsconfig.cjs.json",
    "build:esm": "tsc --project ./tsconfig.esm.json",
    "postbuild:esm": "tsc-alias --verbose --dir dist/_esm --project tsconfig.esm.json",
    "build:default": "tsc --project ./tsconfig.json",
    "postbuild:default": "tsc-alias --verbose --dir dist/_esm --project tsconfig.json",
    "build:artefacts": "cp package.json dist/package.json",
    "build": "yarn run clear && yarn run build:types && yarn run build:cjs && yarn run build:esm",
    "postbuild": "yarn run build:artefacts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "eslint": "eslint --fix ./src",
    "develop": "nodemon",
    "service:install-deps-frozen": "yarn install --frozen-lockfile --network-timeout 1000000",
    "service:install-deps-frozen:development": "yarn run service:install-deps-frozen --production=false",
    "service:install-deps-frozen:production": "yarn run service:install-deps-frozen --production=true"
  },
  "exports": {
    "./*": {
      "types": "./_types/*.d.ts",
      "require": "./_cjs/*.js",
      "import": "./_esm/*.js",
      "default": "./_esm/*.js"
    }
  },
  "typesVersions": {
    ">=4.2": {
      "*": [
        "_types/*"
      ]
    }
  },
  "types": "./index.d.ts",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@typescript-eslint/scope-manager": "^6.12.0",
    "@typescript-eslint/types": "^6.12.0",
    "@typescript-eslint/typescript-estree": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-universe": "^12.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "mkdirp": "^3.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.ts"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/test/**",
      "src/**/docs/**",
      "src/**/__tests__/**",
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ],
    "exec": "node --loader ts-node/esm ./src/index.ts",
    "delay": 2500
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "verbose": true,
    "transform": {}
  }
}
